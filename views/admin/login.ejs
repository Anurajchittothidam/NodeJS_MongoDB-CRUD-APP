<section >
    <div class="container">
      <div class="row d-flex justify-content-center mt-5" style="padding-top: 5rem;">
        <div class="col-12 col-sm-12 col-md-8 col-lg-6" >
          
          <form action="/admin/login" onsubmit="return submitform(event)" method="post"  id="form" >
            
            <div id="error">
              <% if (error){%>
               <div  class="alert alert-danger d-flex justify-content-between" role="alert"> <%= error %> 
              <div class="close text-dark fs-5" style="cursor: pointer;" onclick="hideErrorMsg()">X</div>
              </div>
              <% } %>
            </div>
                
       
  
            <!-- Email input -->
            <div class="form-outline mb-4">
              <label class="form-label pt-3 pl-3 " for="username"><h5>User Name</h5></label>
              <input type="username" id="username" class="user_class form-control form-control-lg"
                placeholder="Enter a the username" name="username" />
            </div>
  
            <!-- Password input -->
            <div class="form-outline mb-3">
              <label class="form-label pt-3 pl-3 " for="password"> <h5> Password</h5></label>
              <input type="password" id="password" class="form-control form-control-lg"
                placeholder="Enter password" name="password" />
            </div>
  
            <div class="d-flex justify-content-between align-items-center">
              <!-- Checkbox -->
              <div class="form-check mb-0">
                <input class="form-check-input me-2" type="checkbox" value="" id="showpassword" />
                <label class="form-check-label" for="showpassword">
                 <h5> Show Password</h5>
                </label>
              </div>
             
            </div>
  
            <div class="text-center  mt-4 pt-2">
              <button type="submit" class="btn btn-primary btn-lg" 
                style="padding-left: 2.5rem; padding-right: 2.5rem;" >Login</button>
            </div>
  
          </form>
        </div>
      </div>
    </div>
  </section>
  <footer>
    <div
    class="d-flex  justify-content-center px-4 bg-white" style="padding-top: 7rem;">
    <!-- Copyright -->
    <div class="text-black mb-5" >
      Copyright Â© 2020. All rights reserved.
    </div> 
    </div>
  </footer>
  <script src="/javascripts/adminloginValidation.js"></script>