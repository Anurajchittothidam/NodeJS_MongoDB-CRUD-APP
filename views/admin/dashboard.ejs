<%- include('../partials/admin-header')%>
<div class="container">
    <div class="row d-flex justify-content-center">
      <div class="col-lg-8 col-md-10 mt-5 text-lg-center">
        <div class="d-flex justify-content-end ">
          <a href="/admin/addUser" type="button" class="btn btn-primary btn-lg btn-block mb-3">Add user</a>
        </div>
        
        <% if (message){%>
            <div class="alert alert-warning" role="alert"><%= message %>
            </div>
        <%}%>
              <table class="table">
                  <thead class="bg-dark text-white">
                    <tr>
                      <th scope="col">No</th>
                      <th scope="col">Name</th>
                      <th scope="col">Email</th>
                      <th scope="col text-lg-end">Handle</th>
                    </tr>
                  </thead>
                  <tbody>
                      <% users.forEach(users=>{%>
                        <div id="<%=users._id%>"></div>
                          <tr>
                              <td scope="row"><%=index+=1 %></td>
                              <td><%=users.firstname%>  <%=users.lastname%></td>
                              <td class="text-break" ><%=users.email%></td>
                              <td class="text-lg-end">
                                  <a href="/admin/deleteUser/<%=users._id%>" onclick="return deleteUser('<%=users._id%>')" class="btn m-1 btn-danger">
                                    <i class="bi bi-trash-fill"></i></a>
  
                                  <a href="/admin/editUser/<%=users._id%>" type="button" class="btn m-1 btn-warning">
                                    <i class="bi bi-pencil-square"></i>
                              </td>
                            </tr>
                      <%})%>
                  </tbody>
                </table>
      </div>        
    </div>
</div>

<script>
  function deleteUser(id){
    if(confirm('Are you shure do you want to delete this user')){
      return true
    }
    return false;
  }
</script>



